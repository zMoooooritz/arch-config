[module/music]
type = custom/script
format-underline = ${xrdb:color4}
exec = ~/.scripts/multimedia current
tail = true
interval = 1
click-left = ~/.scripts/multimedia toggle

[module/window]
type = custom/script
exec = ~/.scripts/window 2> ~/.local/share/window/log
interval = 0.3

[module/tracker]
type = custom/script
exec = polybar-msg hook tracker_hook 1 &> /dev/null
interval = 60

[module/tracker_hook]
type = custom/ipc
format-underline = ${xrdb:color9}
hook-0 = ~/.scripts/tracker current
hook-1 = date
click-left = ~/.scripts/tracker toggle && polybar-msg -p %pid% hook tracker_hook 1
initial = 1

[module/backlight]
{%@@ if profile == "eta" @@%}
format-underline = #008C79
type = custom/script
exec = ~/.scripts/backlight
tail = true
interval = 1
click-left = ~/.scripts/backlight def
enable-scroll = true
scroll-up = ~/.scripts/backlight inc
scroll-down = ~/.scripts/backlight dec
{%@@ elif profile == "pi" @@%}
type = internal/backlight
card = intel_backlight
enable-scroll = true
format = <label>
format-underline = #06b500
label =  %percentage%%
{%@@ endif @@%}

[module/weather]
type = custom/script
format-underline = ${xrdb:color6}
exec = ~/.scripts/weather_bar
click-left = ~/.scripts/toggle WTTR
tail = true
interval = 5

[module/cal]
type = custom/script
format-underline = ${xrdb:color4}
exec = date '+%H:%M:%S %d.%m.%Y'
click-left = ~/.scripts/toggle CALENDAR
click-right = ~/.scripts/toggle CALENDAR
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
interval = 1

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 70
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon2/temp2_input
interval = 2

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1
label-open = 
label-open-foreground = ${colors.secondary}
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

