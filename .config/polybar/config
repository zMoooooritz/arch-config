secondary = #e60053
alert = ${xrdb:color1}

[bar/main]
{%@@ if profile == "eta" @@%}
monitor = ${env:MONITOR:DP-2}
height = 34
radius = 10.0
{%@@ elif profile == "pi" @@%}
monitor = ${env:MONITOR:eDP-1}
