# #---Multimedia Key Bindings---# #

# volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%

# granular volume control
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +1%
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -1%

# mute
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle

# track control
bindsym XF86AudioPlay exec ~/.scripts/multimedia.sh playpause
bindsym XF86AudioPause exec ~/.scripts/multimedia.sh playpause
bindsym XF86AudioStop exec ~/.scripts/multimedia.sh stop
bindsym XF86AudioNext exec ~/.scripts/multimedia.sh next
bindsym XF86AudioPrev exec ~/.scripts/multimedia.sh prev

