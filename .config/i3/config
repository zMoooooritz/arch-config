bindsym XF86MonBrightnessDown exec --no-startup-id ~/.scripts/backlight.sh down 5

# granular brightness
bindsym $mod+XF86MonBrightnessUp exec --no-startup-id ~/.scripts/backlight.sh up 1
bindsym $mod+XF86MonBrightnessDown exec --no-startup-id ~/.scripts/backlight.sh down 1

# volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%

# granular volume
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +1%
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -1%

# mute
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

